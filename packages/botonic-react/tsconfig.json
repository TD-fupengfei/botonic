{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.d.ts", "src/**/*.js"],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs":true,
    "checkJs":true,
    "jsx": "react",
    "esModuleInterop":true,

    // lint
    "allowUnreachableCode": false,

    //cache & performance
    "incremental": true,
    "skipLibCheck" : true
    //"disableSourceOfProjectReferenceRedirect": true is not faster
  }
}
